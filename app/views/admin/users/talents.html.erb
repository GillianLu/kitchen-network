<div>
    <div>
        <h1>Talents</h1>
    </div>
   <div>
    <div>
        <div>
            <%= link_to 'Owners', admin_users_path %>
            <%= link_to 'Talents', admin_talents_path %>
            <%= link_to 'Pending', admin_users_pending_path %>
        </div>
        <table>
            <thead>
                <tr>
                    <th scope="col">
                        ID
                    </th>
                    <th scope="col">
                        Name
                    </th>
                    <th scope="col">
                        Contact
                    </th>
                    <th scope="col">
                        Email
                    </th>
                    <th scope="col">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                <% @talents.each do |talent| %>
                    <tr>
                        <th scope="row">
                            <%= talent.id %>
                        </th>
                        <td>
                            <%= link_to "#{talent.first_name} #{talent.last_name}", edit_admin_user_path(talent.id) %>
                        </td>
                        <td>
                            <%= talent.phone_number %>
                        </td>
                        <td>
                            <%= talent.email %>
                        </td>
                        <td>
                            <%= link_to edit_admin_user_path(talent) do %>
                                <i></i>
                                <span>Edit</span>
                            <% end %> 
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
</div>
