<%= stylesheet_link_tag "dashboard" %>


<div class='dashboard-main-container'>
    <div class='dashboard-main-overview-container'>
        <div class='dashboard-main-overview'>
            <h1>Overview</h1>
            <p>Overview of the available jobs you can apply for.</p>
        </div>
        <div class='dashboard-main-numbers-container'>
            
            <div class='dashboard-main-number-card'>
                <div class='dashboard-card-title'>
                    <div class='dashboard-card-icon-container'>
                        <i class="fa-solid fa-kitchen-set icon"></i>
                    </div>
                    <div class='dashboard-card-icon'>
                        <p>__ Jobs Available</p>
                    </div>
                </div>
                <div>
                    <p class='dashboard-card-details'>There are __ registered clients waiting for you.</p>
                </div>
            </div>

            <div class='dashboard-main-number-card'>
                <div class='dashboard-card-title'>
                    <div class='dashboard-card-icon-container1'>
                        <i class="fa-solid fa-user-tie icon"></i>
                    </div>
                    <div class='dashboard-card-icon'>
                        <p>__ Registered Clients</p>
                    </div>
                </div>
                <div>
                    <p class='dashboard-card-details'>There are __ registered clients waiting for you.</p>
                </div>
            </div>

            <div class='dashboard-main-number-card'>
                <div class='dashboard-card-title'>
                    <div class='dashboard-card-icon-container2'>
                        <i class="fa-solid fa-envelope-circle-check icon"></i>
                    </div>
                    <div class='dashboard-card-icon'>
                        <p>__ Application Sent</p>
                    </div>
                </div>
                <div>
                    <p class='dashboard-card-details'>There are __ registered clients waiting for you.</p>
                </div>
            </div>

            <div class='dashboard-main-number-card'>
                <div class='dashboard-card-title'>
                    <div class='dashboard-card-icon-container3'>
                        <i class="fa-solid fa-circle-check icon"></i>
                    </div>
                    <div class='dashboard-card-icon'>
                        <p>__ Jobs Done</p>
                    </div>
                </div>
                <div>
                    <p class='dashboard-card-details'>There are __ registered clients waiting for you.</p>
                </div>
            </div>
        </div>
    </div>
    <div class='dashboard-main-newest-container'>
        <div class='dashboard-main-newest'>
            <h2>Newest Jobs</h2>
            <p>Here are the latest job opportunities available for you to apply for.</p>
        </div>
        
        <div class = 'dashboard-newest-body'>
            <% @jobs.each do |job| %>
                <div class = 'dashboard-newest-card'>
                    <div class = 'dashboard-card-date-container'>
                        <p class='dashboard-card-date'><%= job.created_at.strftime("%B %d, %Y %I:%M %p") %></p>
                    </div>
                    <div class = 'dashboard-card-info-container'>
                        <div class='dashboard-card-title-container'>
                            <p class='dashboard-card-title'><%= job.title %></p>
                            <p class='dashboard-card-salary'><%= number_to_currency(job.salary, unit: "â‚±", precision: 2) %></p>
                        </div>
                        <div class='dashboard-card-definition-container'>
                            <p class='dashboard-card-definition'><%= job.description %></p>
                        </div>
                        <div class='dashboard-card-requirements-container'>
                            <p class='dashboard-card-requirements'><b>Requirements: </b><%= job.requirements %></p>
                        </div>               
                    </div>
                    <div class = 'dashboard-buttons-container'>
                        <button class='dashboard-button'><i class="fa-solid fa-eye"></i> View</button>
                        <button class='dashboard-button'><i class="fa-solid fa-paper-plane"></i> Apply</button>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>