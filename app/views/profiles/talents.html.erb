<div class="flex flex-col min-h-screen w-full">
  <div class="my-20 overflow-y-auto">
    <div class="px-5 py-5">
      <div class="max-w-7xl mx-auto p-8 bg-white rounded-lg shadow-md w-full">
        <h1 class="text-4xl font-bold mb-6">Our Talents</h1>

        <% if @talents.any? %>
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% @talents.each do |talent| %>
              <div class="bg-white p-8 rounded-lg shadow-lg">
                <div class="flex items-center mb-6">
                  <%= image_tag 'avatar.jpg', class: 'w-20 h-20 rounded-full mr-6', alt: 'Avatar' %>
                  <div>
                    <h2 class="text-2xl font-bold"><%= talent.first_name %> <%= talent.last_name %></h2>
                    <p class="text-gray-500"><%= talent.email %></p>
                  </div>
                </div>
                <div class="mb-6">
                  <h3 class="text-xl font-semibold">Skills</h3>
                  <p class="text-gray-700 whitespace-pre-line"><%= talent.skills %></p>
                </div>
                <div class="mb-6">
                  <h3 class="text-xl font-semibold">Experience</h3>
                  <p class="text-gray-700 whitespace-pre-line"><%= talent.experience %></p>
                </div>
                <div class="mb-6">
                  <h3 class="text-xl font-semibold">Education</h3>
                  <p class="text-gray-700 whitespace-pre-line"><%= talent.education %></p>
                </div>
                <div>
                  <%= link_to 'View Profile', profile_path(talent), class: 'bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-600' %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500">No talented people found.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
