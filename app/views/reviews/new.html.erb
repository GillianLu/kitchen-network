<div class = 'w-full h-screen'>
    <div class = 'w-full h-full pt-16 flex justify-center items-center'>
        <div class='w-1/3 bg-white rounded-xl shadow-lg p-5'>
            <div class = 'py-3'>
                <p class = 'text-center font-medium text-2xl'>WRITE YOUR OWN REVIEW</p>
            </div>

            <div class = 'flex justify-center'>
                <div class = 'divider1 w-3/4 bg-neutral-300'></div>
            </div>
            
            <div class = 'flex py-2 px-2'>
                <div class = 'py-1 flex flex-col justify-center items-center w-full'>
                    <p class = 'text-sm py-2'>Talent Name:</p>
                    <p class = 'font-semibold'><%= @reviewee.first_name.upcase %> <%= @reviewee.last_name.upcase %></p>
                </div>
                <div class = 'py-1 flex flex-col justify-center items-center w-full'>
                    <p class = 'text-sm py-2'>Job Title:</p>
                    <p class = 'font-semibold'><%= @job_listing.title %></p>
                </div>
            </div>

            <div class='p-5 w-full'>
                <%= form_with(model: @review, url: job_listing_reviews_path(@job_listing), method: :post) do |form| %>
                    <div class="flex flex-col py-2">
                        <p class = 'font-semibold'>Review Title:</p>
                        <%= form.text_field :title, class: 'rounded-lg focus:ring-mediumgreen focus:border-mediumgreen' %>
                    </div>
                    <div class="flex flex-col py-2">
                        <p class = 'font-semibold'>Content:</p>
                        <%= form.text_area :content, class: 'rounded-lg resize-none focus:ring-mediumgreen focus:border-mediumgreen' %>
                    </div>
                    <div class='py-2 flex gap-5 justify-center'>
                         <%= button_to "Cancel", root_path, method: :get, class: "w-1/3 bg-gray-400 text-white font-semibold p-3 ml-2 rounded-lg" %>
                        <%= form.submit "Submit Review", class: "w-1/3 bg-mediumgreen text-white font-semibold p-3 rounded-lg" %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>