<div class="flex flex-col min-h-screen w-full bg-gray-100">
  <div class="my-20 overflow-y-auto">
    <div class="px-5 py-5">
      <div class="max-w-7xl mx-auto p-8 bg-white rounded-lg shadow-md w-full">
        <h1 class="text-4xl font-bold mb-6 text-darkorange">Reviews for <%= @user.full_name %></h1>

        <% if @reviews.any? %>
          <% @reviews.each do |review| %>
            <div class="mb-6 p-4 bg-lightorange rounded-lg shadow">
              <h2 class="text-2xl font-bold text-darkorange"><%= review.title %></h2>
              <p class="mt-2 text-gray-700"><%= review.content %></p>
              <p class="mt-2 text-sm text-gray-500">Reviewed by <%= User.find(review.reviewer_id).full_name %> on <%= review.created_at.strftime("%d %b, %Y") %></p>
            </div>
          <% end %>
        <% else %>
          <p class="text-gray-500">No reviews found.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
  .bg-lightorange {
    background-color: #ffd7b5;
  }
  .text-darkorange {
    color: #F65A11;
  }
</style>
