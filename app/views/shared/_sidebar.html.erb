<% if current_user.present? %>
    <div class="flex">
        <div class="w-64 p-4 bg-stronggreen h-screen sticky top-0 z-999">
            <%= link_to root_path, class: "flex items-center ps-2.5 mb-8" do %>
                <%= image_tag 'logo.png', class: "h-7 me-3", alt: "Logo" %>
                <span class="self-center text-xl font-semibold whitespace-nowrap text-white">
                    Kitchen Network
                </span>
            <% end %>
            
            <ul class="flex-col space-y-2 font-medium text-white">
                <% if current_user.role.role_name == 'admin' %>
                    <%= render 'shared/admin_menu' %>
                <% else%>
                    <%= render 'shared/user_navbar' %>
                <% end %>
            </ul>
        </div>
    </div>
<% end %>
