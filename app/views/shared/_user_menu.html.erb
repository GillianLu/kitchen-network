<script>
    document.addEventListener("DOMContentLoaded", function() {

        function toggleDropdown(dropdownId) {
            var dropdown = document.getElementById(dropdownId);
            dropdown.classList.toggle("hidden");
            sessionStorage.setItem(dropdownId + '_state', dropdown.classList.contains('hidden') ? 'closed' : 'open');
        }

        var dropdownButtons = document.querySelectorAll('[data-collapse-toggle]');
        dropdownButtons.forEach(function(button) {
            button.addEventListener("click", function(event) {
                event.stopPropagation();

                var dropdownId = this.getAttribute("data-collapse-toggle");
                toggleDropdown(dropdownId);
            });
        });

        document.addEventListener("click", function(event) {
            var dropdowns = document.querySelectorAll('.hidden');
            dropdowns.forEach(function(dropdown) {
                dropdown.classList.add("hidden");
            });
        });

        var dropdownMenus = document.querySelectorAll('.hidden');
        dropdownMenus.forEach(function(menu) {
            menu.addEventListener("click", function(event) {
            event.stopPropagation();
            });
        });

        var dropdownStates = sessionStorage.getItem('dropdown_states');
        if (dropdownStates) {
            dropdownStates = JSON.parse(dropdownStates);
            Object.keys(dropdownStates).forEach(function(dropdownId) {
                var dropdown = document.getElementById(dropdownId);
                if (dropdownStates[dropdownId] === 'open') {
                    dropdown.classList.remove('hidden');
                }
            });
        }
    });

    window.addEventListener("beforeunload", function() {
        var dropdownStates = {};

        var dropdowns = document.querySelectorAll('[id^=main-menu-dropdown], [id^=preferences-dropdown]');
        dropdowns.forEach(function(dropdown) {
            dropdownStates[dropdown.id] = dropdown.classList.contains('hidden') ? 'closed' : 'open';
        });

        sessionStorage.setItem('dropdown_states', JSON.stringify(dropdownStates));
    });
</script>