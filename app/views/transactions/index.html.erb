<%= stylesheet_link_tag "job_listing" %>

<%= render 'shared/user_navbar' %>

<div class="container">
  <h1>Transactions</h1>

  <% if @transactions.any? %>
    <table class="applicants-table">
      <thead>
        <tr>
            <th>Job Created</th>
            <th>Talent Name</th>
            <th>Job Title</th>
            <th>Amount</th>
        </tr>
      </thead>
      <tbody>
            <% @transactions.each do |transaction| %>
                <tr>
                    <td><%= transaction.created_at %></td>
                    <td><%= transaction.talent.first_name %> <%= transaction.talent.last_name %></td>
                    <td><%= transaction.job_listing.title %></td>
                    <td><%= transaction.amount %></td>
                </tr>
            <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No transactions found.</p>
  <% end %>
</div>



